datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String
  profileImage String?  // Opcional
  address      Address?
}

model Address {
  id         Int    @id @default(autoincrement())
  street     String
  number     String
  city       String
  state      String
  zipcode    String
  userId     Int    @unique
  user       User   @relation(fields: [userId], references: [id])
}
