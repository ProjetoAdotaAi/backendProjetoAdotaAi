datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  firebaseId   String
  name         String
  phone        String
  instagram    String
  email        String   @unique
  password     String
  address      Address?
  isOng        Boolean
  profilePicture String? 
}

model Address {
  id         Int    @id @default(autoincrement())
  cep        String
  city       String
  state      String
  userId     Int    @unique
  user       User   @relation(fields: [userId], references: [id])
}
